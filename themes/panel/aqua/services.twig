<div class="masaustu">
   <div class="bosluk">
      <div class="container">
         <div class="col-lg-6 col-md-offset-3">
            {% if site['service_speed'] == 2 %}
            <div class="well">
               <div class="top justify-content-center text-center">
                  <span class="list">
                  <span class="">
                  <span style="color: #f24236;font-weight: 500; font-size:13px;" class="fa fa-arrow-down"></span>
                  <span style="color: #f24236;font-weight: 500; font-size:13px;"><b><u>: {{ lang['services.speed.veryslow'] }} </u></b></span></span><br>
                  <span class="ml-4x">
                  <span style="color: #fe6d86;font-weight: 500; font-size:13px;" class="fa fa-arrow-down"></span>
                  <span style="color: #fe6d86;font-weight: 500; font-size:13px;"><b><u>: {{ lang['services.speed.slow'] }} </u></b></span></span><br>
                  <span class="ml-4x">
                  <span style="color: #5696c9;font-weight: 500; font-size:13px;" class="fa fa-compress"></span>
                  <span style="color: #5696c9;font-weight: 500; font-size:13px;"><b><u>: {{ lang['services.speed.normal'] }} </u></b></span></span><br>
                  <span class="ml-4x">
                  <span style="color: #0dd887;font-weight: 500; font-size:13px;" class="fa fa-arrow-up"></span>
                  <span style="color: #0dd887;font-weight: 500; font-size:13px;"><b><u>: {{ lang['services.speed.fast'] }} </u></b></span></span>
                  </span>
               </div>
            </div>
            {% endif %}
         </div>
         <div class="row">
            <div class="hidden-xs col-sm-12 col-md-12 col-lg-12">
               <div class="well">
                  <div class="servisbilgi">
                     <div class="scroll">
                        <table class="table ">
                           <thead>
                              <tr>
                                 <th>{{ lang['services.id'] }}</th>
                                 <th class="width-service-name">{{ lang['services.name'] }}</th>
                                 <th class="nowrap t-r">{{ lang['services.price'] }}</th>
                                 <th class="nowrap t-r">{{ lang['services.min'] }}</th>
                                 <th class="nowrap t-r">{{ lang['services.max'] }}</th>
                                 {% if avarageTime %}
                                 <th class="nowrap t-r">{{ lang['services.avarage'] }} <i class="fa fa-exclamation-circle"></i></th>
                                 {% endif %}
                                 <th class="nowrap t-r">{{ lang['neworder.description'] }}</th>
                              </tr>
                           </thead>
                           <tbody>
                              {% for category in serviceCategory %}
                              <tr>
                                 <td colspan="7" class="sc"><strong>{{ category["category_name"] }}</strong></td>
                              </tr>
                              {% for service in category['services'] %}
                              <tr class="aralama servie-data-panel">
                                 <td>{{ service["service_id"] }}</td>
                                 <td>{{ service["service_name"] }}</td>
                                 <td class="t-r">{{ service["service_price"] }} {{ site['currency'] }}</td>
                                 <td class="t-r">{{ service["service_min"] }}</td>
                                 <td class="t-r">{{ service["service_max"] }}</td>
                                 {% if avarageTime %}
                                 <td class="t-r">{{ service["service_speed"] }}</td>
                                 {% endif %}
                                 <td class="t-r">
                                    <button class="btn btn-primary btn-xs"  data-toggle="modal" data-target="#service_desc-{{ service['service_id'] }}"><i class="fa fa-eye"></i></button>
                                 </td>
                              </tr>
                              
                            
                            <div id="service_desc-{{ service['service_id'] }}" class="modal fade" role="dialog">
                              <div class="modal-dialog">
                               <div class="modal-content">
                                  <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">Ã—</button>
                                    <h4 class="modal-title">{{ service["service_name"] }}</h4>
                                  </div>
                                  <div class="modal-body">
                                    <p>{{ service["service_description"] }}</p>
                                  </div>
                                  <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                                  </div>
                                </div>
                            
                              </div>
                            </div>
                                                          
                              {% endfor %}
                              {% endfor %}
                           </tbody>
                        </table>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
