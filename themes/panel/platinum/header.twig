          {% endif %}</strong>
                            </div>
            <ul class="list-unstyled components" style="margin-top: 5px;">
                      {% if ( settings['sms_verify'] == 2 and user['sms_verify'] == 1 ) or (settings['mail_verify'] == 2 and user['mail_verify'] == 1 ) %}
            <li {% if active_menu == "verify" %} class="active" {% endif %}><a href="/"><i class="fas fa-user-check"></i> {{ lang['verify.title'] }}</a></li>
        {% else %}
            <li {% if active_menu == "neworder" %} class="active" {% endif %}><a href="/"><i class="fas fa-shopping-bag"></i> {{ lang['neworder.title'] }}</a></li>
            <li {% if active_menu == "services" %} class="active" {% endif %}><a href="/services"><i class="fas fa-money-bill-wave"></i> {{ lang['services.title'] }}</a></li>
            <li {% if active_menu == "orders" %} class="active" {% endif %}><a href="/orders"><i class="fas fa-cart-plus"></i> {{ lang['orders.title'] }}</a></li>
           	{% if site["dripfeedcount"] %}
			<li {% if active_menu == "dripfeeds" %} class="active" {% endif %}><a href="/dripfeeds"><i class="fas fa-history"></i> {{ lang['dripfeed.title'] }}</a></li>
			{% endif %}
			{% if site["subscriptionscount"] %}
			<li {% if active_menu == "subscriptions" %} class="active" {% endif %} ><a href="/subscriptions"><i class="fas fa-business-time"></i> {{ lang['subscriptions.title'] }}</a></li>
			{% endif %}
            <li {% if active_menu == "addfunds" %} class="active" {% endif %}><a href="/addfunds"><i class="fas fa-lira-sign"></i> {{ lang['addfunds.title'] }}</a></li>
			{% if affiliates %}
            <li {% if active_menu == "affiliates" %} class="active" {% endif %}><a href="/affiliates"><i class="fas fa-users"></i> {{ lang['affiliates.title'] }}</a></li>
            {% endif %}
            {% if panelSelling %}
            <li {% if active_menu == "child-panels" %} class="active" {% endif %}><a href="/child-panels"><i class="far fa-window-restore"></i> {{ lang['childpanels.title'] }}</a></li>
            {% endif %}
            {% if apiPage %}
            <li {% if active_menu == "api" %} class="active" {% endif %}><a href="/api"><i class="fas fa-file-code"></i> {{ lang['api.title'] }}</a></li>
            {% endif %}
            {% if ticketPage %}
            <li {% if active_menu == "tickets" %} class="active" {% endif %}><a href="/tickets"><i class="fas fa-headset"></i> {{ lang['tickets.title'] }} {% if ticketCount %} <span class="badge">{{ ticketCount }}</span> {% endif %}</a></li>  
            {% endif %}
            {% if blogPage %}    
            <li {% if active_menu == "blog" %} class="active" {% endif %}><a href="/blog"><i class="fas fa-newspaper"></i> {{ lang['blog.title'] }}</a></li>
            {% endif %}
            {% if faqPage %} 
            <li {% if active_menu == "faq" %} class="active" {% endif %}><a href="/faq"><i class="far fa-question-circle"></i> {{ lang['faq.title'] }}</a></li>
            {% endif %}
            {% if termsPage %} 
            <li {% if active_menu == "terms" %} class="active" {% endif %}><a href="/terms"><i class="fas fa-file-word"></i> {{ lang['terms.title'] }}</a></li> 
            {% endif %}
        {% endif %}  
